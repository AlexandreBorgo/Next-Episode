<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:text="Hello from the other side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_series_title"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_series_date"
        android:layout_below="@+id/rv_series_title"
        android:layout_alignLeft="@+id/rv_series_title"
        android:layout_alignStart="@+id/rv_series_title"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_series_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="@string/see"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/rv_series_see"
            android:textSize="8sp" />

        <Button
            android:text="@string/add"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/rv_series_add"
            android:textSize="8sp" />

    </LinearLayout>

</RelativeLayout>